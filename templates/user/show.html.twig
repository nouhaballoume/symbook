{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur {{ user.email }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails de l'utilisateur</h1>

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h2>{{ user.prenom }} {{ user.nom }}</h2>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">{{ user.id }}</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">{{ user.email }}</dd>

                    <dt class="col-sm-3">Nom complet</dt>
                    <dd class="col-sm-9">{{ user.prenom }} {{ user.nom }}</dd>

                    <dt class="col-sm-3">Date de naissance</dt>
                    <dd class="col-sm-9">{{ user.dateNaissance ? user.dateNaissance|date('d/m/Y') : 'Non renseignée' }}</dd>

                    <dt class="col-sm-3">Téléphone</dt>
                    <dd class="col-sm-9">{{ user.numeroTelephone ?? 'Non renseigné' }}</dd>

                    <dt class="col-sm-3">Rôles</dt>
                    <dd class="col-sm-9">
                        {% for role in user.roles %}
                            <span class="badge bg-primary">{{ role }}</span>
                        {% endfor %}
                    </dd>

                    <dt class="col-sm-3">Compte vérifié</dt>
                    <dd class="col-sm-9">
                        {% if user.isVerified %}
                            <span class="badge bg-success">Oui</span>
                        {% else %}
                            <span class="badge bg-danger">Non</span>
                        {% endif %}
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <a href="{{ path('admin_users_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
            </div>
        </div>
    </div>
{% endblock %}