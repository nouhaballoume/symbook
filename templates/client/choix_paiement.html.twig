{% extends 'base.html.twig' %}

{% block body %}
<h2>Choisissez votre mode de paiement</h2>
<form action="{{ path('client_commande_valider') }}" method="POST">
    {% for mode in modes %}
        <div class="form-check">
            <input class="form-check-input" type="radio" name="mode_paiement" id="mode_{{ loop.index }}" 
                   value="{{ mode }}" required>
            <label class="form-check-label" for="mode_{{ loop.index }}">
                {{ mode }}
            </label>
        </div>
    {% endfor %}
    <button type="submit" class="btn btn-primary mt-3">Valider la commande</button>
</form>
{% endblock %}